<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.example.liuhaoyuan.phonemanager.activity.BackGroundActivity">

    <ImageView
        android:id="@+id/iv_smoke_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_smoke_m"
        android:layout_alignParentBottom="true"
        android:background="@drawable/desktop_smoke_m" />

    <ImageView
        android:id="@+id/iv_smoke_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/desktop_smoke_t" />


</RelativeLayout>
