<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_guard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liuhaoyuan.phonemanager.activity.PhoneGuardActivity">

    <TextView
        style="@style/TitleStyle"
        android:id="@+id/tv_guard_title"
        android:text="手机防盗" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全号码"
        android:layout_below="@id/tv_guard_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_margin="10dp"
        android:id="@+id/tv_guard_phone"
        />
    <TextView
        android:id="@+id/tv_guard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_guard_title"
        android:layout_alignParentRight="true"
        android:text="18947309161"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat.Small"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_below="@id/tv_guard_phone"
        android:text="防护是否开启"
        android:layout_margin="10dp"
        android:id="@+id/tv_guard_defend"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_guard_number"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/unlock_24"
        android:id="@+id/iv_guard_lock"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_guard_defend"
        style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
        android:text="重新进入设置向导"
        android:layout_margin="5dp"
        android:id="@+id/btn_guard"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        android:layout_below="@+id/btn_guard"
        android:background="@android:color/darker_gray"
        android:textSize="16sp"
        android:padding="5dp"
        android:id="@+id/tv_divider"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/tv_divider"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS追踪 #location#"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/star_on"
            android:gravity="center"
            android:drawablePadding="5dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放报警音乐 #alarm#"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/star_on"
            android:gravity="center"
            android:drawablePadding="5dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远程删除数据 #wipedata#"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/star_on"
            android:gravity="center"
            android:drawablePadding="5dp"
            /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远程锁屏 #lockscreen#"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/star_on"
            android:gravity="center"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
</RelativeLayout>
