<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liuhaoyuan.phonemanager.activity.SettingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.example.liuhaoyuan.phonemanager.views.SettingItemView
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:isChecked="true"
        my:off_content="自动更新已关闭"
        my:on_content="自动更新已开启"
        my:title="自动更新设置" />

    <com.example.liuhaoyuan.phonemanager.views.SettingItemView
        android:id="@+id/setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:isChecked="true"
        my:off_content="显示电话归属地已关闭"
        my:on_content="显示电话归属地已开启"
        my:title="电话归属地显示">

    </com.example.liuhaoyuan.phonemanager.views.SettingItemView>

    <com.example.liuhaoyuan.phonemanager.views.SettingItemView
        android:id="@+id/setting_rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:isChecked="true"
        my:off_content="小火箭已关闭"
        my:on_content="小火箭已开启"
        my:title="小火箭动画" />
    <com.example.liuhaoyuan.phonemanager.views.SettingItemView
        android:id="@+id/setting_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:isChecked="true"
        my:off_content="黑名单拦截已关闭"
        my:on_content="黑名单已开启"
        my:title="黑名单拦截" />
    <com.example.liuhaoyuan.phonemanager.views.SettingItemView
        android:id="@+id/setting_watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:isChecked="true"
        my:off_content="看门狗已关闭"
        my:on_content="看门狗已开启"
        my:title="应用看门狗" />
</LinearLayout>

</ScrollView>
