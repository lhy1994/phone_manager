<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cache_info"
        android:layout_width="70dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="70dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tv_cache_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="name"
        android:layout_toRightOf="@id/iv_cache_info"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_cache_info_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cache_info_name"
        android:layout_margin="5dp"
        android:text="size"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@id/iv_cache_info"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_cache_info_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/delete" />
</RelativeLayout>